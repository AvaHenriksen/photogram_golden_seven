<h1>Edit a Photo</h1>

<% photo.id = params[:id] %>

<form action="http://localhost:3000/update_photo/<%=photo.id%>"
  <div>
    <label for="photo_caption">Caption:</label>
    <input id="photo_caption" type="text" name="the_new_caption" value="<%=@caption%>">
  </div>
  <div>
    <label for="photo_image_url">Image URL:</label>
    <input id="photo_image_url" type="text" name="the_new_source" value="<%=@photo_source%>">
  </div>
  <div>
    <button>Update Photo</button>
  </div>
</form>
